@model HomeDetailsViewModel
@{
    ViewBag.Title = Model.PageTitle;
    //Layout = "~/Views/Shared/_Layout.cshtml";
    string photoPath = $"~/images/{Model.Employee.PhotoPath ?? "noimage.jpg"}";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src=@photoPath asp-append-version=true/>
                <h4>Employee ID : @Model.Employee.Id</h4>
                <h4>Email : @Model.Employee.Email</h4>
                <h4>Department : @Model.Employee.Department</h4>

            </div>

            <div class="card-footer text-center">
                <a asp-route-controller="home" asp-route-action="details" asp-route-id="@Model.Employee.Id" class="btn btn-primary m-1">View</a>
                <a asp-route-controller="home" asp-route-action="edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>

        </div>
    </div>
</div>

