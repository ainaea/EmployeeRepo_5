@model IEnumerable<Employee>

@{
    ViewBag.Title = "List of Employee";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card-group">
    @foreach (var employee in Model)
    {
        string photoPath = $"~/images/{employee.PhotoPath ?? "noimage.jpg"}";
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
                <img class="card-img-top imageThumbnail" src=@photoPath asp-append-version=true />
                <div class="card-footer text-center">
                    <a asp-route-controller="home" asp-route-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                    <a asp-route-controller="home" asp-route-action="edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>    
            </div>

        </div>
    }

</div>

